<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avatar.voicerecorder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <application
        android:allowBackup="true"
        android:name="com.avatar.voicerecorder.RecorderApplication"
        android:theme="@style/Theme.OmRecorderKotlin">
        <activity android:name="com.avatar.voicerecorder.voice_recorder.AudioRecorderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Light"/>
        <activity android:name="com.avatar.voicerecorder.RecorderMainActivity"/>
    </application>

</manifest>